<%- include('layout/header') %>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <h1>Update User Game Biodata Page</h1>
      <div class="card shadow">
        <div class="card-header bg-primary">
          <h3 class="text-white">Update User Game Biodata</h3>
        </div>
        <div class="card-body p-4">
          <form action="/view/update-user-games-biodata/<%= usergamebiodata.id %> " method="post" id="add-form">
            <div class="mb-3">
              <label for="nama_user">Nama User</label>
              <input type="text" class="form-control" id="nama_user" name="nama_user" placeholder="Nama User" value="<%= usergamebiodata.nama_user %> " required />
            </div>
            <div class="mb-3">
              <label for="jenis_kelamin">Jenis Kelamin</label>
              <input type="text" class="form-control" id="jenis_kelamin" name="jenis_kelamin" placeholder="Jenis Kelamin" value="<%= usergamebiodata.jenis_kelamin %> " required />
            </div>
            <div class="mb-3">
              <label for="umur">Umur</label>
              <input type="text" class="form-control" id="umur" name="umur" placeholder="Umur" value="<%= usergamebiodata.umur %> " required />
            </div>
            <div class="mb-3">
              <label for="email">Email</label>
              <input type="text" class="form-control" id="email" name="email" placeholder="Email" value="<%= usergamebiodata.email %> " required />
            </div>
            <div class="mb-3">
              <label for="id_user">ID User</label>
              <input type="text" class="form-control" id="id_user" name="id_user" placeholder="ID User" value="<%= usergamebiodata.id_user %> " required />
            </div>
            <div class="mb-3 d-grid">
              <button type="submit" name="submit" class="btn btn-primary btn-lg">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
